<% @messages.each do |message| %>

    <div class="row">
      <div class="col-xs-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h5><%= message.user.first_name %></h5>
          </div>
        </div>
      </div>
      <div class="col-xs-10">
        <div class="panel panel-default">
          <div class="panel-body">
            <p class="bold"><%= message.created_at.strftime("%d %B %Y")%></p>
            <p><%= message.message %></p>
          </div>
        </div>
      </div>
    </div>

<%end%>