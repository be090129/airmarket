<%# encoding: utf-8 %>


<!-- begin:article -->
<div class="col-md-9 col-md-push-3" >
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="row">
        <div class="col-xs-9">
          <h4><%= @order.listing.name %></h4>
          <p><%= @order.start_date.strftime("%d %B %Y") %> au <%= @order.end_date.strftime("%d %B %Y") %></p>
        </div>
        <div class="col-xs-3 text-right">
          <%= render "orders/status/status", :order => @order %>
          <h2><%= @order.order_price %> â‚¬</h2>
        </div>
      </div>
    </div>
    <div class="panel-body">
      <div class="col-xs-6">

      </div>
      <div class="col-xs-6  text-right">
        <% if @order.buyer_id == current_user.id %>
            <%= link_to "Annuler", sales_path, {:class => "btn btn-danger"} %>
        <% elsif @order.seller_id == current_user.id %>
            <%= link_to "Accepter", sales_path, {:class => "btn btn-success"} %>
            <%= link_to "Refuser", sales_path, {:class => "btn btn-danger"} %>
        <%end%>
      </div>
    </div>
  </div>

  <div class="row">
      <div class="col-xs-2">
        <div class="panel panel-default">
          <div class="panel-body">
             <h5><%= @order.buyer.first_name %></h5>
          </div>
        </div>
      </div>
      <div class="col-xs-10">
        <div class="panel panel-default">
          <div class="panel-body">
             <p><%= @order.message if @order.message %></p>
          </div>
        </div>
      </div>
  </div>

</div>
<!-- end:article -->


