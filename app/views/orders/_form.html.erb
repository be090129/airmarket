<%= form_for([@listing, @order]) do |f| %>
    <div class="col-xs-12 center">
        <div class="input-daterange input-group" id="datepicker">
          <%= f.text_field :start_date, placeholder:"Date d'arrivée", :as => :string, :input_html => {:class => 'input-sm form-control', autofocus: true} %>
          <%= f.text_field :end_date, placeholder:"Date de départ", :as => :string, :input_html => {:class => 'input-sm form-control', autofocus: true} %>
        </div><br />
    </div><br />


    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_area :message, autofocus: true, class: "form-control",:rows => 4 %>
    </div><br />
    <div class="actions center">
      <%= f.submit "Envoyez une demande", class: "btn btn-success" %>
    </div>
<% end %>

<script>

    $(function(){$("#datepicker").datepicker({
            format: "dd/mm/yyyy",
            language: "fr",
            autoclose: true,
            showbuttonPanel: true
        });
    });
</script>