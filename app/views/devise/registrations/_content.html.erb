<%# encoding: utf-8 %>
      <div class="col-md-9 col-md-push-3" id="info_perso" >


        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
            <%= devise_error_messages! %>

            <h2>Votre profil</h2>

            <div class="row">
              <div class="col-xs-6">
                <%= f.label :first_name, "Votre Prénom" %>
                <%= f.text_field :first_name, class: "form-control", :autofocus => true %>
              </div>
              <div class="col-xs-6">
                <%= f.label :last_name, "Votre Nom" %>
                <%= f.text_field :last_name, class: "form-control", :autofocus => true %>
              </div>
            </div><br />

            <div class="form-group">
              <%= f.label :email, "Adresse email" %>
              <%= f.email_field :email, class: "form-control", :autofocus => true %>
            </div>

            <div class="row" id="adresse">
              <div class="col-xs-6">
                <%= f.label :birthday, "Date d'anniversaire (jj/mm/aaa)" %>
                <%= f.date_field :birthday, class: "form-control", :autofocus => true %>
              </div>
              <div class="col-xs-6">
                <%= f.label :nationality, "Nationalité" %>
                <%= f.text_field :nationality, class: "form-control", :autofocus => true %>
              </div>
            </div><br />

            <hr>

            <h2>Votre adresse</h2>


            <div class="form-group">
              <%= f.label :adressline1, "Adresse" %>
              <%= f.text_field :adressline1, class: "form-control" %>
            </div>

            <div class="row">
              <div class="col-xs-4">
                <%= f.label :postalcode, "Code postal" %>
                <%= f.text_field :postalcode, class: "form-control" %>
              </div>
              <div class="col-xs-8">
                <%= f.label :city, "Ville" %>
                <%= f.text_field :city, class: "form-control" %>
              </div>
            </div>

            <div class="row" id="mdp">

              <div class="col-xs-6">
                <%= f.label :country, "Pays" %>
                <%= f.text_field :country, class: "form-control" %>
              </div>
              <div class="col-xs-6">
                <%= f.label :region, "Région si US ou CA" %>
                <%= f.text_field :region, class: "form-control" %>
              </div>
            </div>

            <hr >

            <h2 id="valider">Modifiez votre mot de passe</h2>

            <div class="row">
              <div class="col-xs-12">
                <%= f.label :password, "Nouveau mot de passe" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

            <hr>

            <h2>Valider vos modifications</h2>

            <div class="form-group">
              <%= f.label :current_password, "Mot de passe actuel" %> <i>(Nous avons besoin de votre mot de passe actuel pour effectuer la modification)</i>
              <%= f.password_field :current_password, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Modifier", class: "btn btn-success" %>
            </div>
        <% end %>

        <hr>

        <h3>Supprimer votre compte</h3>

        <p>Quel dommage ! Contactez-nous avant de supprimer votre compte. <%= button_to "Supprimer votre compte", registration_path(resource_name), :data => { :confirm => "Quel dommage !!!" }, :method => :delete, class: "btn btn-warning" %></p>

      </div>

