<%# encoding: utf-8 %>

<div id="content">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-4">
        <h1>Votre profil</h1>

        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :email, "Adresse email" %>
              <%= f.email_field :email, class: "form-control", :autofocus => true %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Mot de passe" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :current_password, "Mot de passe actuel" %> <i>(Nous avons besoin de votre mot de passe actuel pour effectuer la modification)</i>
              <%= f.password_field :current_password, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.submit "Modifier", class: "btn btn-success" %>
            </div>
        <% end %>

        <h3>Supprimer votre compte</h3>

        <p>Pas content ? <%= button_to "Supprimer votre compte", registration_path(resource_name), :data => { :confirm => "Quel dommage !!!" }, :method => :delete, class: "btn btn-warning" %></p>

      </div>
    </div>
  </div>
</div>
