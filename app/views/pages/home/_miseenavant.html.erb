<!-- begin:for-sale -->
<div class="row">
  <div class="col-md-12">
    <div class="heading-title">
      <h2>Les annonces du mois</h2>
    </div>
  </div>
</div>
<div class="row">

  <% @miseenavant.limit(3).each do |mea| %>
    <div class="col-md-4 col-sm-4 col-xs-12">
    <div class="property-container">
      <div class="property-image">
        <% mea.images.limit(1).each do |vimage| %>
            <%= image_tag(vimage.photo.url(:medium), class: "img-responsive")%>
        <% end %>
        <div class="property-price">
          <span><%= mea.listing_price_standard %> â‚¬</span>
        </div>
      </div>
      <div class="property-content">
        <h3><%= link_to mea.name.capitalize, listing_path(mea) %><small><%= mea.city %> - <%= mea.country %></small></h3>
        <p><%= mea.summary %></p>
        <p><%= link_to "En savoir plus",listing_path(mea) , class: "btn btn-success" %></p>
      </div>
      <div class="property-features">
        <span><i class="fa fa-home"></i> 5,000 m<sup>2</sup></span>
        <span><i class="fa fa-hdd-o"></i> 2 Bed</span>
        <span><i class="fa fa-male"></i> 2 Bath</span>
        <span><i class="fa fa-car"></i> 2 Garages</span>
      </div>
    </div>
  </div>
  <%end%>
  <!-- break -->
</div>
<!-- end:for-sale -->
