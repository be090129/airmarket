<!-- begin:sidebar -->
<div class="col-md-3 sidebar">
  <!-- break -->
  <div class="widget widget-sidebar widget-white">
    <% if user_signed_in? && @listing.user == current_user %>
        <div class="widget-header">
          <h3>Modification</h3>
        </div>
        <ul>
          <li> <%= link_to 'Modifier mon annonce', modification_path(@listing) %> </li>
        </ul>
    <%else%>

        <div class="widget-header">
          <h3>Réservation</h3>
        </div>

        <div class="center">
            <h5>Contactez <%= @listing.user.first_name %> maintenant !</h5>

            <% @listing.user.images.limit(1).each do |vimage| %>
                  <%= image_tag(vimage.photo.url(:avatar), class: "circular") if !vimage.nil?%>
            <% end %>
        </div><br />

        <div class="center">
          <h4>A partir de  <%= @listing.listing_price_standard %> €</h4>
        </div><br />

        <%= render "orders/form" %>

    <% end %>

  </div>
  <!-- break -->
</div>
<!-- end:sidebar -->