<div class="row">
  <div class="col-md-12">
    <div class="heading-title heading-title-alt">
      <h3>Annonces correspondant à vos critères</h3>
    </div>
  </div>
</div>
<!-- begin:sorting -->
<div class="row sort">
  <div class="col-md-12 col-sm-12 col-xs-12">

    <%= link_to listings_path, {:class => "btn btn-success"} do %>
        <i class="fa fa-th"></i>
    <% end %>
    <%= link_to listings_list_path, {:class => "btn btn-default"} do %>
        <i class="fa fa-list"></i>
    <% end %>

    <% if @listings.total_entries == 0 || @listings.total_entries == 1 %>
        <strong><%= @listings.total_entries %></strong> annonce correspond à vos critères
    <%else%>
        <strong><%= @listings.total_entries %></strong> annonces correspondent à vos critères
    <%end%>

  </div>

</div>
<!-- end:sorting -->